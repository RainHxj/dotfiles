"1.0rc1

set mapleader=','

loadplugins '\.(js|penta)$'
group user
map -count -modes=n,v <M-Left> -builtin <count>:tabNext<CR>
map -count -modes=n,v <M-Right> -builtin <count>:tabnext<CR>
map -count -modes=n,v <S-j> -builtin <count>:tabNext<CR>
map -count -modes=n,v <S-k> -builtin <count>:tabnext<CR>

" Go faster
nnoremap j 3j
nnoremap k 3k

" Open help in new tab
set newtab='help'

" Only show tab line when there are multiple tabs
set showtabline=multitab

" Multiple URLs are comma-separated
set urlseparator=', '

nnoremap <bs> <nop>

set hlfind
nnoremap <Leader><space> <esc>:noh<CR>

" Smarter 'd' key
set tabclose=left,opener,previous,right
nnoremap d :tabclose<CR>

colorscheme vimium

" vim: set ft=pentadactyl:
